# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Service URLs
# For development (localhost)
TRIP_SERVICE_URL=http://localhost:3002

# For production, replace with actual domain/IP
# TRIP_SERVICE_URL=https://your-trip-service-domain.com
# TRIP_SERVICE_URL=http://your-server-ip:3002

# Additional service URLs for future expansion
# USER_SERVICE_URL=http://localhost:3003
# PAYMENT_SERVICE_URL=http://localhost:3004
# CONTRACT_SERVICE_URL=http://localhost:3005

# API Gateway Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# For production CORS, use your frontend domain:
# ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
